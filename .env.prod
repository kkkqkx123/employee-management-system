# Employee Management System Production Environment Configuration
# IMPORTANT: Keep this file secure and never commit to version control

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL=jdbc:postgresql://your-prod-db-host:5432/employee_management
DATABASE_USERNAME=employee_admin
DATABASE_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_HOST=your-prod-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_DATABASE=0
REDIS_SSL_ENABLED=true

# ========================================
# SECURITY CONFIGURATION
# ========================================
JWT_SECRET=CHANGE_ME_JWT_SECRET_MINIMUM_32_CHARACTERS_LONG
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=86400000
JWT_ISSUER=employee-management-system

ENCRYPTION_KEY=CHANGE_ME_ENCRYPTION_KEY_32_BYTES_MINIMUM

# ========================================
# EMAIL CONFIGURATION
# ========================================
EMAIL_HOST=your-smtp-host.com
EMAIL_PORT=587
EMAIL_USERNAME=your-production-email@company.com
EMAIL_PASSWORD=CHANGE_ME_EMAIL_PASSWORD
EMAIL_FROM_ADDRESS=noreply@company.com
EMAIL_FROM_NAME=Employee Management System

# ========================================
# SERVER CONFIGURATION
# ========================================
SERVER_PORT=8080
CONTEXT_PATH=/api
SSL_ENABLED=true
SSL_KEYSTORE=/etc/ssl/certs/keystore.p12
SSL_KEYSTORE_PASSWORD=CHANGE_ME_KEYSTORE_PASSWORD
SSL_KEY_ALIAS=employee-management

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ALLOWED_ORIGINS=https://your-production-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# ========================================
# FILE STORAGE CONFIGURATION
# ========================================
FILE_UPLOAD_DIR=/var/app/uploads
FILE_TEMP_DIR=/var/app/temp
FILE_MAX_SIZE=10485760

# ========================================
# MONITORING CONFIGURATION
# ========================================
ENVIRONMENT=production
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/PRODUCTION/WEBHOOK

# ========================================
# WEBSOCKET CONFIGURATION
# ========================================
WEBSOCKET_ALLOWED_ORIGINS=https://your-production-domain.com

# ========================================
# BUSINESS CONFIGURATION
# ========================================
PAYROLL_CALCULATION_ENABLED=true
PAYROLL_AUDIT_ENABLED=true
NOTIFICATION_CLEANUP_ENABLED=true
NOTIFICATION_CLEANUP_DAYS=90
EMPLOYEE_IMPORT_BATCH_SIZE=100
EMPLOYEE_EXPORT_MAX_RECORDS=10000

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_FILE_PATH=/var/log/employee-management/employee-management.log
LOG_FILE_MAX_SIZE=50MB
LOG_FILE_MAX_HISTORY=30
LOG_FILE_TOTAL_SIZE=1GB

# ========================================
# RATE LIMITING CONFIGURATION
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=100

# ========================================
# CACHE CONFIGURATION
# ========================================
CACHE_TTL=600000

# ========================================
# SESSION CONFIGURATION
# ========================================
SESSION_TIMEOUT=1800

# ========================================
# ASYNC CONFIGURATION
# ========================================
ASYNC_CORE_POOL_SIZE=10
ASYNC_MAX_POOL_SIZE=50
ASYNC_QUEUE_CAPACITY=200

# ========================================
# DATABASE POOL CONFIGURATION
# ========================================
DB_POOL_MAX_SIZE=50
DB_POOL_MIN_IDLE=20
DB_POOL_IDLE_TIMEOUT=600000
DB_POOL_CONNECTION_TIMEOUT=30000
DB_POOL_MAX_LIFETIME=1800000
DB_POOL_LEAK_DETECTION=60000

# ========================================
# REDIS POOL CONFIGURATION
# ========================================
REDIS_POOL_MAX_ACTIVE=50
REDIS_POOL_MAX_IDLE=20
REDIS_POOL_MIN_IDLE=10
REDIS_POOL_MAX_WAIT=2000

# ========================================
# EMAIL TIMEOUT CONFIGURATION
# ========================================
EMAIL_CONNECTION_TIMEOUT=10000
EMAIL_TIMEOUT=10000
EMAIL_WRITE_TIMEOUT=10000

# ========================================
# PRODUCTION SPECIFIC
# ========================================
PRODUCTION_URL=https://your-production-domain.com