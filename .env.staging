# Employee Management System Staging Environment Configuration

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL=jdbc:postgresql://localhost:5432/employee_management_staging
DATABASE_USERNAME=employee_admin
DATABASE_PASSWORD=staging_password_change_me

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password
REDIS_DATABASE=1
REDIS_SSL_ENABLED=false

# ========================================
# SECURITY CONFIGURATION
# ========================================
JWT_SECRET=staging_jwt_secret_key_change_me_32_chars
JWT_EXPIRATION=7200000
JWT_REFRESH_EXPIRATION=172800000
JWT_ISSUER=employee-management-system

ENCRYPTION_KEY=staging_encryption_key_change_me_32_bytes

# ========================================
# EMAIL CONFIGURATION
# ========================================
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=587
EMAIL_USERNAME=your_mailtrap_username
EMAIL_PASSWORD=your_mailtrap_password
EMAIL_FROM_ADDRESS=staging@company.com
EMAIL_FROM_NAME=Employee Management System (Staging)

# ========================================
# SERVER CONFIGURATION
# ========================================
SERVER_PORT=8080
CONTEXT_PATH=/api
SSL_ENABLED=false

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://staging.company.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# ========================================
# FILE STORAGE CONFIGURATION
# ========================================
FILE_UPLOAD_DIR=/tmp/staging/uploads
FILE_TEMP_DIR=/tmp/staging/temp
FILE_MAX_SIZE=10485760

# ========================================
# MONITORING CONFIGURATION
# ========================================
ENVIRONMENT=staging
GRAFANA_PASSWORD=staging_grafana_password
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/STAGING/WEBHOOK

# ========================================
# WEBSOCKET CONFIGURATION
# ========================================
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000,https://staging.company.com

# ========================================
# BUSINESS CONFIGURATION
# ========================================
PAYROLL_CALCULATION_ENABLED=true
PAYROLL_AUDIT_ENABLED=true
NOTIFICATION_CLEANUP_ENABLED=true
NOTIFICATION_CLEANUP_DAYS=30
EMPLOYEE_IMPORT_BATCH_SIZE=100
EMPLOYEE_EXPORT_MAX_RECORDS=5000

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_FILE_PATH=logs/employee-management-staging.log
LOG_FILE_MAX_SIZE=50MB
LOG_FILE_MAX_HISTORY=10
LOG_FILE_TOTAL_SIZE=500MB

# ========================================
# RATE LIMITING CONFIGURATION
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=200

# ========================================
# CACHE CONFIGURATION
# ========================================
CACHE_TTL=600000

# ========================================
# SESSION CONFIGURATION
# ========================================
SESSION_TIMEOUT=1800

# ========================================
# ASYNC CONFIGURATION
# ========================================
ASYNC_CORE_POOL_SIZE=5
ASYNC_MAX_POOL_SIZE=15
ASYNC_QUEUE_CAPACITY=100

# ========================================
# DATABASE POOL CONFIGURATION
# ========================================
DB_POOL_MAX_SIZE=20
DB_POOL_MIN_IDLE=5
DB_POOL_IDLE_TIMEOUT=600000
DB_POOL_CONNECTION_TIMEOUT=30000
DB_POOL_MAX_LIFETIME=1800000
DB_POOL_LEAK_DETECTION=60000

# ========================================
# REDIS POOL CONFIGURATION
# ========================================
REDIS_POOL_MAX_ACTIVE=15
REDIS_POOL_MAX_IDLE=8
REDIS_POOL_MIN_IDLE=3
REDIS_POOL_MAX_WAIT=2000