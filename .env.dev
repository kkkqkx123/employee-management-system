# Employee Management System Development Environment Configuration

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL=jdbc:postgresql://localhost:5432/employee_management
DATABASE_USERNAME=employee_admin
DATABASE_PASSWORD=dev_password

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_SSL_ENABLED=false

# ========================================
# SECURITY CONFIGURATION
# ========================================
JWT_SECRET=dev_jwt_secret_key_for_development_only_32_chars
JWT_EXPIRATION=7200000
JWT_REFRESH_EXPIRATION=172800000
JWT_ISSUER=employee-management-system

ENCRYPTION_KEY=dev_encryption_key_32_bytes_minimum

# ========================================
# EMAIL CONFIGURATION
# ========================================
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM_ADDRESS=dev@localhost
EMAIL_FROM_NAME=Employee Management System (Dev)

# ========================================
# SERVER CONFIGURATION
# ========================================
SERVER_PORT=8080
CONTEXT_PATH=/api
SSL_ENABLED=false

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# ========================================
# FILE STORAGE CONFIGURATION
# ========================================
FILE_UPLOAD_DIR=./uploads
FILE_TEMP_DIR=./temp
FILE_MAX_SIZE=10485760

# ========================================
# MONITORING CONFIGURATION
# ========================================
ENVIRONMENT=development
GRAFANA_PASSWORD=admin

# ========================================
# WEBSOCKET CONFIGURATION
# ========================================
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ========================================
# BUSINESS CONFIGURATION
# ========================================
PAYROLL_CALCULATION_ENABLED=true
PAYROLL_AUDIT_ENABLED=true
NOTIFICATION_CLEANUP_ENABLED=false
NOTIFICATION_CLEANUP_DAYS=30
EMPLOYEE_IMPORT_BATCH_SIZE=50
EMPLOYEE_EXPORT_MAX_RECORDS=1000

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_FILE_PATH=logs/employee-management-dev.log
LOG_FILE_MAX_SIZE=20MB
LOG_FILE_MAX_HISTORY=5
LOG_FILE_TOTAL_SIZE=100MB

# ========================================
# RATE LIMITING CONFIGURATION
# ========================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_RPM=1000

# ========================================
# CACHE CONFIGURATION
# ========================================
CACHE_TTL=300000

# ========================================
# SESSION CONFIGURATION
# ========================================
SESSION_TIMEOUT=3600

# ========================================
# ASYNC CONFIGURATION
# ========================================
ASYNC_CORE_POOL_SIZE=2
ASYNC_MAX_POOL_SIZE=5
ASYNC_QUEUE_CAPACITY=50

# ========================================
# DATABASE POOL CONFIGURATION
# ========================================
DB_POOL_MAX_SIZE=10
DB_POOL_MIN_IDLE=2
DB_POOL_IDLE_TIMEOUT=300000
DB_POOL_CONNECTION_TIMEOUT=20000
DB_POOL_MAX_LIFETIME=1200000
DB_POOL_LEAK_DETECTION=30000

# ========================================
# REDIS POOL CONFIGURATION
# ========================================
REDIS_POOL_MAX_ACTIVE=8
REDIS_POOL_MAX_IDLE=4
REDIS_POOL_MIN_IDLE=2
REDIS_POOL_MAX_WAIT=2000