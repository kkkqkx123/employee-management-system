# Employee Management System Environment Configuration Template
# Copy this file to .env.dev, .env.staging, or .env.prod and fill in the values

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL=jdbc:postgresql://localhost:5432/employee_management
DATABASE_USERNAME=employee_admin
DATABASE_PASSWORD=your_secure_password_here

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DATABASE=0
REDIS_SSL_ENABLED=false

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Generate a strong JWT secret (at least 256 bits)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=86400000
JWT_ISSUER=employee-management-system

# Generate a strong encryption key (32 bytes for AES-256)
ENCRYPTION_KEY=your_encryption_key_here_32_bytes_minimum

# ========================================
# EMAIL CONFIGURATION
# ========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@company.com
EMAIL_PASSWORD=your_email_password_or_app_password
EMAIL_FROM_ADDRESS=noreply@company.com
EMAIL_FROM_NAME=Employee Management System

# ========================================
# SERVER CONFIGURATION
# ========================================
SERVER_PORT=8080
CONTEXT_PATH=/api
SSL_ENABLED=false
SSL_KEYSTORE=
SSL_KEYSTORE_PASSWORD=
SSL_KEY_ALIAS=

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# ========================================
# FILE STORAGE CONFIGURATION
# ========================================
FILE_UPLOAD_DIR=/var/app/uploads
FILE_TEMP_DIR=/var/app/temp
FILE_MAX_SIZE=10485760

# ========================================
# MONITORING CONFIGURATION
# ========================================
ENVIRONMENT=development
GRAFANA_PASSWORD=admin
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ========================================
# WEBSOCKET CONFIGURATION
# ========================================
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ========================================
# BUSINESS CONFIGURATION
# ========================================
PAYROLL_CALCULATION_ENABLED=true
PAYROLL_AUDIT_ENABLED=true
NOTIFICATION_CLEANUP_ENABLED=true
NOTIFICATION_CLEANUP_DAYS=90
EMPLOYEE_IMPORT_BATCH_SIZE=100
EMPLOYEE_EXPORT_MAX_RECORDS=10000

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_FILE_PATH=logs/employee-management.log
LOG_FILE_MAX_SIZE=50MB
LOG_FILE_MAX_HISTORY=30
LOG_FILE_TOTAL_SIZE=1GB

# ========================================
# RATE LIMITING CONFIGURATION
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=100

# ========================================
# CACHE CONFIGURATION
# ========================================
CACHE_TTL=600000

# ========================================
# SESSION CONFIGURATION
# ========================================
SESSION_TIMEOUT=1800

# ========================================
# ASYNC CONFIGURATION
# ========================================
ASYNC_CORE_POOL_SIZE=5
ASYNC_MAX_POOL_SIZE=20
ASYNC_QUEUE_CAPACITY=100

# ========================================
# DATABASE POOL CONFIGURATION
# ========================================
DB_POOL_MAX_SIZE=30
DB_POOL_MIN_IDLE=10
DB_POOL_IDLE_TIMEOUT=600000
DB_POOL_CONNECTION_TIMEOUT=30000
DB_POOL_MAX_LIFETIME=1800000
DB_POOL_LEAK_DETECTION=60000

# ========================================
# REDIS POOL CONFIGURATION
# ========================================
REDIS_POOL_MAX_ACTIVE=20
REDIS_POOL_MAX_IDLE=10
REDIS_POOL_MIN_IDLE=5
REDIS_POOL_MAX_WAIT=2000

# ========================================
# EMAIL TIMEOUT CONFIGURATION
# ========================================
EMAIL_CONNECTION_TIMEOUT=5000
EMAIL_TIMEOUT=5000
EMAIL_WRITE_TIMEOUT=5000