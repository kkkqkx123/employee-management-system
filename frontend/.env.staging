# Staging Environment Configuration for Frontend
# This file contains staging-specific environment variables

# API Configuration
VITE_API_BASE_URL=https://staging-api.yourdomain.com/api
VITE_WS_URL=wss://staging-api.yourdomain.com

# Application Configuration
VITE_APP_NAME=Employee Management System (Staging)
VITE_APP_VERSION=1.0.0-staging
VITE_APP_ENVIRONMENT=staging

# Feature Flags
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_MSW=false
VITE_ENABLE_ANALYTICS=false

# Security Configuration
VITE_CSP_ENABLED=true
VITE_SECURE_COOKIES=true

# Performance Configuration
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHE=true
VITE_CACHE_VERSION=1.0.0-staging

# Monitoring Configuration
VITE_ENABLE_ERROR_REPORTING=true
VITE_SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id

# Debug Configuration
VITE_DEBUG_MODE=true
VITE_VERBOSE_LOGGING=true