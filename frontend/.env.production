# Production Environment Configuration for Frontend
# This file contains production-specific environment variables

# API Configuration
VITE_API_BASE_URL=https://api.yourdomain.com/api
VITE_WS_URL=wss://api.yourdomain.com

# Application Configuration
VITE_APP_NAME=Employee Management System
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_MSW=false
VITE_ENABLE_ANALYTICS=true

# Security Configuration
VITE_CSP_ENABLED=true
VITE_SECURE_COOKIES=true

# Performance Configuration
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHE=true
VITE_CACHE_VERSION=1.0.0

# Monitoring Configuration
VITE_ENABLE_ERROR_REPORTING=true
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# CDN Configuration (if using)
VITE_CDN_URL=https://cdn.yourdomain.com
VITE_STATIC_ASSETS_URL=https://static.yourdomain.com